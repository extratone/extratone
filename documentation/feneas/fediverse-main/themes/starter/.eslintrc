{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "camelcase": ["warn", { "properties": "always" }],
    "no-cond-assign": ["error", "except-parens"]
  }
}
